<div class="answer post" id="answer-<%= answer.id %>">
  <div class="controls">
    <div class="vote-controls"><%= vote_controls(answer) %></div>
    <% if current_user == question.user %>
      <div class="accept-answer">
        <a class="icon-ok inactive"></a>
      </div>
    <% end %>
  </div>
  <div class="main">
    <div class="body"><%=format answer.body%></div>
    <div class="meta">
      <div class="links"><%= link_to 'edit', edit_answer_path(answer) if logged_in? %></div>
      <div class="righto">answered <%= time_ago_in_words answer.created_at %> ago by <%= link_to answer.user.display_name, answer.user %></div>
    </div>
  </div>
</div>
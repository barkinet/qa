<div class="page-header">
  <h1>Editing user <%= @user.name %>
</div>

<%= simple_form_for @user, url: admin_user_path(@user) do |f| %>
  <div class="row">
    <div class="col-xs-5">
      <%= f.input :admin %>
      <%= f.input :moderator %>
      <div class="form-controls">
        <%= link_to 'return to profile', @user, class: 'btn btn-default' %>
        <%= f.button :submit, class: 'btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
